                </Grid>
            </TabItem>
            <TabItem Header="Circular Bars - Top">
                <Grid Name="UI_Grid_ArExtU" Background="{StaticResource AppContainerBackgroundColor}" HorizontalAlignment="Stretch" Margin="0,0,0,0">

                    <!--Diameter-->
